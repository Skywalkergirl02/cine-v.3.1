@model semana4.Models.Funcion

@{
   
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('/Images/bg.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Arial', sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 50px;
        }

        .row {
            margin-top: 20px;
        }

        .col-sm-2 {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            color: #fff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            color: #fff;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Detalles de la Función</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <h4>Función</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Dia)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dia)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Horario)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Horario)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Lenguaje)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Lenguaje)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdPelicula)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdPelicula)
                    </dd>
                </dl>
            </div>
        </div>

        <div class="row justify-content-center mt-3">
            <div class="col-md-6">
                <a asp-action="Edit" asp-route-id="@Model?.IdFuncion" class="btn btn-primary">Editar</a> |
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
