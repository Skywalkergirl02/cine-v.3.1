@model semana4.Models.Funcion

@{
    
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('/Images/bg.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Arial', sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 50px;
        }

        .form-label {
            font-weight: bold;
        }

        .btn-primary {
            background: linear-gradient(45deg, #9B0B0B, #F72626);
            border: none;
            font-size: 1em;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, #9B0B0B, #F72626);
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            color: #fff;
            font-size: 1em;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .shadow {
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Crear Función</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create" class="shadow p-4 rounded bg-light">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Dia" class="form-label">Día:</label>
                        <input asp-for="Dia" class="form-control" placeholder="Ingrese el día" />
                        <span asp-validation-for="Dia" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Horario" class="form-label">Horario:</label>
                        <input asp-for="Horario" class="form-control" placeholder="Ingrese el horario" />
                        <span asp-validation-for="Horario" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Lenguaje" class="form-label">Lenguaje:</label>
                        <input asp-for="Lenguaje" class="form-control" placeholder="Ingrese el lenguaje" />
                        <span asp-validation-for="Lenguaje" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdPelicula" class="form-label">Película:</label>
                        <select asp-for="IdPelicula" class="form-control">
                            <option value="">Seleccionar Película</option>
                            @foreach (var pelicula in ViewBag.IdPelicula)
                            {
                                <option value="@pelicula.Value">@pelicula.Text</option>
                            }
                        </select>
                        <span asp-validation-for="IdPelicula" class="text-danger"></span>
                    </div>

                    <div class="mb-3 d-grid">
                        <button type="submit" class="btn btn-primary btn-block">Crear</button>
                        <a asp-action="Index" class="btn btn-secondary btn-block mt-2">Volver al Listado</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
