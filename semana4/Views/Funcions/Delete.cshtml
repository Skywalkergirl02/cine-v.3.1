@model semana4.Models.Funcion

@{
    
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('/Images/bg.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Arial', sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 50px;
        }

        .row {
            margin-top: 20px;
        }

        .col-sm-2 {
            font-weight: bold;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            color: #fff;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Eliminar Función</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <h3>¿Está seguro de que desea eliminar esto?</h3>

                <h4>Función</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Dia)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dia)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Horario)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Horario)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Lenguaje)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Lenguaje)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdPelicula)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdPelicula)
                    </dd>
                </dl>

                <form asp-action="Delete" class="mt-3">
                    <input type="hidden" asp-for="IdFuncion" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
